<div class="content-box">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead class="table__header">
                <tr>
                    <th>Date</th>
                    <th>Customer Name</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Amount Reduced(Tk.)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table__body">
                <% if(locals.returnRecords) {
                    returnRecords.forEach((record) => { %>
                <tr>
                    <td><%= record.returnDate.toLocaleDateString(); %> </td>
                    <td><%= record.customer.name; %></td>
                    <td><%= record.product.name; %></td>
                    <td><%= record.quantity.toLocaleString(); %></td>
                    <td class="text-danger font-weight-bold">- <%= record.amount.toLocaleString(); %></td>
                    <td class="table__actions text-center" data-item-id="<%= record.id %>">
                        <a href="#" class="table__actions-btn returnEditButton"
                            data-toggle="modal" data-target="#addReturns"><i
                                class="ic-pencil pr-2"></i>Edit</a>
                        <a href="#" class="table__actions-btn"
                            data-toggle="modal" data-target="#deleteModal"><i
                                class="ic-trash pr-2"></i>Delete</a>
                    </td>
                </tr>
                <% })} %>
            </tbody>
        </table>
    </div>
</div>