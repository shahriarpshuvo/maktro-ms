<div class="modal fade" id="addCustomer" tabindex="-1" role="dialog"
    data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title t-primary customerForm-title">
                    Add New Customer
                </h5>
                <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/customers" method="post" class="customerForm">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control customerForm-name" name="name"
                            placeholder="John Doe" required maxlength="100"/>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control customerForm-address" name="address"
                            placeholder="22B Baker Street, London" required maxlength="255"/>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input type="text" class="form-control customerForm-phone" name="phone"
                            placeholder="01717000000" required maxlength="11"/>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- q -->
                                <input type="hidden" class="form-control customerForm-amount"
                                    name="amount"
                                    placeholder="Eg. 50000" min="0" required/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- <label for="paid">Paid
                                    Amount</label> -->
                                <input type="hidden" class="form-control customerForm-paid"
                                    name="paid"
                                    placeholder="Eg. 20000" min="0" required/>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                            data-dismiss="modal">
                            <i class="ic-cross"></i> Close
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="ic-check"></i> Save
                            Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>