<div class="content-box">
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead class="table__header">
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Address</th>
          <% if(user.role == 'admin') { %>
          <th>Total</th>
          <th>Paid</th>
          <th>Due</th>
          <th>Return</th>
          <th class="text-center">Actions</th>
          <% } %>
        </tr>
      </thead>
      <tbody class="table__body">
        <% if(locals.customers){ customers.forEach((customer) => { %>
        <tr>
          <td><%= customer.name; %></td>
          <td><%= customer.phone; %></td>
          <td class="address-box"><%= customer.address; %></td>
          <% if(user.role == 'admin') { %>
          <td><%= customer.amount.toLocaleString(); %></td>
          <td>
            <strong class="text-success"
              ><%= customer.paid.toLocaleString(); %></strong
            >
            <% /*<br />
            <small class="text-muted p-0 font-weight-bold">
              (Updated: //customer.updatedAt.toLocaleDateString();)
            </small>
            */%>
          </td>
          <td class="text-danger font-weight-bold">
            <%= customer.due.toLocaleString(); %>
          </td>
          <td class="text-info font-weight-bold">
            (<%= customer.returnAmount.toLocaleString(); %>)
          </td>
          <td
            class="table__actions text-center"
            data-item-id="<%= customer._id %>"
          >
            <a
              href="#"
              class="table__actions-btn customerEditButton"
              data-toggle="modal"
              data-target="#addCustomer"
              ><i class="ic-pencil pr-2"></i>Edit</a
            >
            <a
              href="#"
              class="table__actions-btn"
              data-toggle="modal"
              data-target="#deleteModal"
              ><i class="ic-trash pr-2"></i>Delete</a
            >
          </td>
          <% } %>
        </tr>
        <% })} %>
      </tbody>
    </table>
  </div>
</div>
